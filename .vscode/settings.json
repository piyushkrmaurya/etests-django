{
  "eslint.enable": true,
  "eslint.run": "onType",
  "eslint.validate": [
    {
      "language": "vue",
      "autoFix": true
    },
    {
      "language": "html",
      "autoFix": true
    },
    {
      "language": "javascript",
      "autoFix": true
    },
    {
      "language": "javascriptreact",
      "autoFix": true
    }
  ],
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "eslint.alwaysShowStatus": true,
  "eslint.autoFixOnSave": true,
  "python.pythonPath": "venv/bin/python",
  "python.formatting.provider": "black"
}
